<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 검은 배경 -->
    <View
        android:id="@+id/blackBackground"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#A3C3C0"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 캐릭터 이미지 -->
    <ImageView
        android:id="@+id/character"
        android:layout_width="204dp"
        android:layout_height="307dp"
        android:layout_marginTop="80dp"
        android:elevation="10dp"
        android:src="@drawable/default_charcter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 아이템 (캐릭터 위에 겹치기) -->
    <ImageView
        android:id="@+id/item_Asset"
        android:layout_width="99dp"
        android:layout_height="134dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="64dp"
        android:elevation="15dp"
        android:src="@drawable/swimming"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 유저 정보 영역 -->
    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackBackground">

        <!-- 닉네임 + 수정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <EditText
                android:id="@+id/etNickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="닉네임"
                android:text="닉네임"
                android:textColor="#222222"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="닉네임"
                android:textColor="#222222"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:contentDescription="Edit"
                android:src="@drawable/ic_edit"
                android:visibility="visible" />
        </LinearLayout>

        <!-- 에셋 선택 RecyclerView (가로 스크롤) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAssets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Lv.1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressExp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/progress_exp_drawable" />

        <TextView
            android:id="@+id/tvExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:text="20/100"
            android:textSize="20sp" />

        <!-- 저장 & 취소 버튼 (초기에 숨김) -->
        <LinearLayout
            android:id="@+id/editButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="취소"
                android:textColor="#626262"
                app:backgroundTint="#FFFFFF"
                app:iconPadding="8dp"
                app:iconTint="#626262" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textColor="#ffffff"
                app:backgroundTint="#A3C3C0"
                app:iconPadding="8dp"
                app:iconTint="#ffffff" />
        </LinearLayout>

        <!-- 로그아웃 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:backgroundTint="#FFFFFF"
            android:elevation="0dp"
            android:text="로그아웃"
            android:textColor="#626262"
            android:textSize="16sp"
            app:elevation="0dp"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#626262" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
